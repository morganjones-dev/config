configuration {
  font: "Manrope 12";
  modes: [window, drun, run, ssh];
  show-icons: true;
	drun-match-fields: "name,keywords";
  drun-display-format: "{name}";
	disable-history: false;
  sort: true;
  click-to-exit: true;
	combi-hide-mode-prefix: true;
  steal-focus: true;
  timeout {
    action: "kb-cancel";
    delay: 0;
  }
  filebrowser {
    directories-first: true;
    sorting-method: "name";
  }
}

@theme "./theme"
